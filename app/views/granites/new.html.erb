<% if logged_in? %>

<a style="color:white;font-size:20px;padding-left:20px;" href="/admin"> Back </a>
<div class="new_div">
	<%= form_for @granite, :url => granites_path, :html => { :multipart => true } do |f| %>
	<ul>
	  <li><%= f.file_field :avatar %></li>
	  <li><%= f.label :name %></li>
	  <li><%= f.text_field :name %></li>
	  <li><%= f.label :description %></li>
	  <li><%= f.text_field :description %></li>
	  <li><%= f.submit %></li>
	<% end %>	
	</ul>
</div>
<% else %>

<p>Please log in to create a granite</p>

<% end %>