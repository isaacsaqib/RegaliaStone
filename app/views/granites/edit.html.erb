<h1>Editing article</h1>
 
<%= form_for :granite, url: granite_path(@granite), method: :patch do |f| %>
 
    <%= f.label :name %><br>
    <%= f.text_field :name %>
 
    <%= f.label :description %><br>
    <%= f.text_area :description %>
    <%= f.file_field :avatar %>

    <%= f.submit %>
 
<% end %>
 
