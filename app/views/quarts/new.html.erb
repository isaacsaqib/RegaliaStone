<% if logged_in? %>
<a style="color:white;font-size:20px;padding-left:20px;" href="/admin"> Back </a>


<div class="new_div">
	<ul>
	<%= form_for @quart, :url => quarts_path, :html => { :multipart => true } do |f| %>
	  <li><%= f.label("Name") %></li>
	  <%= f.text_field :name %><br>
	  <li><%= f.label("Description") %></li>
	  <%= f.text_field :description %><br>
	  <li><%= f.label("Alt") %></li>
	  <%= f.text_field :alt %><br>
	  <li><%= f.label("Color") %>  </li>
	  <%= f.text_field :sort_by_color %><br>
	  <li><%= f.label("Collection") %>  </li>
	  <%= f.select :collection, options_for_select([["Select Type", ""], "Tuscany", "Galaxy", "Marmoreal", "Soft"]) %>
 	<%= file_field_tag "images[]", type: :file, multiple: true %><br><br>
	  <li><%= f.submit %></li>
	<% end %>	
	</ul>

</div>

<% else %>

<p>You must be an administrator to access this page, please return to the home site. </p>

<% end %>
