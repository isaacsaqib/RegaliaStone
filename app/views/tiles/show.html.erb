<body style="background-image:none;">

<div id="header"> 
    <a href="http://www.regaliastone.com"><%= image_tag 'logo.jpg', :id => "logo" %></a>
</div>



  <div id="tile-show-div">
  		<h1 style="text-align: center;color:black;font-family: 'Josefin Sans';font-size:80px;margin:0px"><%=@tile.name%></h1><br>
      <ul>
      	<% @pictures_tile.each do |pic| %>
              <li><a href="/pictures/<%=pic.id%>"><%= image_tag pic.image.url %></a></li>
              <li><p><%= pic.description %></p></li>
        <% end %>
    	</ul>

          <p><b>Collection:</b> <%=@tile.collection %></p>
          <p><b>Finished Surface:</b> <%=@tile.finish%></p>
          <p><b>Size:</b> <%=@tile.size%></p>
  </div>


</body>
