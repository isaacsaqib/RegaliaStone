<% if logged_in? %>

	<%= form_for(@review) do |f| %>
	<%= f.label(:name) %>
	<%= f.text_field(:name) %>

	  <%= f.label(:date) %>
	    <%= f.datetime_select(:date) %>


	  <%= f.label(:description) %>
	    <%= f.text_field(:description) %>
	<%= f.submit %>
	<% end %>
<%else %>

<p>Please log in to leave a review</p>


<% end %>