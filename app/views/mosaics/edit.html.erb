<% if logged_in? %>

<div class="new_div">
	<ul>
	<%= form_for @mosaic, :url => mosaic_path, :html => { :multipart => true } do |f| %>
	 <li><%= f.label("Name") %></li>
	  <%= f.text_field :name %><br>
	  <li><%= f.label("Description") %></li>
	  <%= f.text_field :description %><br>
	  <li><%= f.label("Collection") %></li>
		<%= f.text_field :collection %><br>
	 <li><%= f.label("Sold By") %></li>
	  	<%= f.text_field :soldby %><br>
	  <li><%= f.label("Material") %></li>
	  <%= f.select :material, options_for_select([["Glass"]]) %><br>
	  <%= f.label("Size") %>
	  <%= f.text_field :size %><br><br>
 	<%= file_field_tag "images[]", type: :file, multiple: true %><br><br>
	  <li><%= f.submit %></li>
	<% end %>	
	</ul>

</div>

<% else %>

<p>You must be an administrator to access this page, please return to the home site. </p>

<% end %>
